// prisma/schema.prisma//
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cedente {
  id        Int      @id @default(autoincrement())
  nome      String
  cpfCnpj   String
  telefone  String
  email     String
  createdAt DateTime @default(now())
  creditos  Credito[]
}

model Credito {
  id             Int      @id @default(autoincrement())
  numeroProcesso String
  valorCausa     Float
  status         String   @default("pendente")
  cedenteId      Int
  cedente        Cedente @relation(fields: [cedenteId], references: [id])
  createdAt      DateTime @default(now())
}

model LogEvent {
  id        String   @id @default(cuid())
  type      String
  ts        DateTime
  sessionId String?
  userId    String?
  url       String?
  referrer  String?
  ua        String?
  lang      String?
  props     Json
}
